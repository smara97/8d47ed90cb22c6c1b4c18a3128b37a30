# ============================================================================
# Video RAG Microservices - Root Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Main environment configuration for Video RAG system.
#   Contains shared settings used across all services and environments.
#
# USAGE:
#   Copy to .env and customize for your deployment environment.
#   Override specific values in environment-specific config files.
#
# ============================================================================

# Project Configuration
PROJECT_NAME=video-rag
COMPOSE_PROJECT_NAME=video-rag
ENVIRONMENT=development

# Network Configuration
NETWORK_NAME=video-rag-network

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000

# Kafka Topics
KAFKA_TOPIC_RAW_FRAMES=raw-frames
KAFKA_TOPIC_OCR_RESULTS=ocr-results
KAFKA_TOPIC_DETECTION_RESULTS=detection-results
KAFKA_TOPIC_CAPTION_RESULTS=caption-results
KAFKA_TOPIC_AGGREGATED_METADATA=aggregated-frame-metadata
KAFKA_TOPIC_FRAME_SUMMARIES=frame-summaries
KAFKA_TOPIC_VIDEO_SEGMENTS=video-segments

# Service Ports
OCR_SERVICE_PORT=8001
DETECTOR_SERVICE_PORT=8002
CAPTIONER_SERVICE_PORT=8003
FRAME_AGGREGATOR_PORT=8004

# Infrastructure Ports
KAFKA_UI_PORT=8080
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
QDRANT_PORT=6333
ZOOKEEPER_PORT=2181
KAFKA_PORT=9092

# Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_NAME=video-rag-storage

# Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=video_embeddings

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8080

# Processing Configuration
OCR_BATCH_SIZE=5
OCR_TIMEOUT=15
DETECTION_CONFIDENCE_THRESHOLD=0.5
MODEL_SIZE=small
MAX_CAPTION_LENGTH=50
CAPTION_TIMEOUT=30

# Development Settings
DEBUG=false
ENABLE_DEBUG_ENDPOINTS=false
MOCK_ML_PROCESSING=false
FAST_STARTUP=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Security Configuration (Override in production)
ENABLE_AUTH=false
API_RATE_LIMIT=1000
CORS_ORIGINS=*

# Performance Settings
WORKER_PROCESSES=1
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=10