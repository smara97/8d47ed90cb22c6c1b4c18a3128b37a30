# ============================================================================
# Development Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Development environment variables for local development and testing.
#   Optimized for developer productivity and debugging capabilities.
#
# ============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000

# Service Configuration
OCR_BATCH_SIZE=5
OCR_TIMEOUT=15
DETECTION_CONFIDENCE_THRESHOLD=0.5
MODEL_SIZE=small
MAX_CAPTION_LENGTH=50
CAPTION_TIMEOUT=30

# Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=video_embeddings_dev

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30

# Development Features
ENABLE_DEBUG_ENDPOINTS=true
MOCK_ML_PROCESSING=true
FAST_STARTUP=true