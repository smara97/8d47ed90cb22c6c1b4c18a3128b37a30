# ============================================================================
# Production Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Production environment variables optimized for enterprise performance,
#   security, and reliability requirements.
#
# SECURITY NOTE:
#   This file contains placeholder values. Actual production secrets
#   should be managed through secure secret management systems.
#
# ============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARN

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=6000
KAFKA_MAX_POLL_RECORDS=1000
KAFKA_COMPRESSION_TYPE=lz4

# Service Configuration
OCR_BATCH_SIZE=10
OCR_TIMEOUT=30
DETECTION_CONFIDENCE_THRESHOLD=0.7
MODEL_SIZE=large
MAX_CAPTION_LENGTH=100
CAPTION_TIMEOUT=60

# Storage Configuration (Use secrets management in production)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_SECURE=true

# Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=video_embeddings_prod
QDRANT_API_KEY=${QDRANT_API_KEY}

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=10
PROMETHEUS_ENDPOINT=prometheus:9090
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}

# Performance Settings
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT=120
CONNECTION_POOL_SIZE=20

# Security
ENABLE_AUTH=true
API_RATE_LIMIT=5000
JWT_SECRET=${JWT_SECRET}
CORS_ORIGINS=${CORS_ORIGINS}

# Production Optimizations
ENABLE_CACHING=true
CACHE_TTL=3600
BATCH_PROCESSING=true
ASYNC_PROCESSING=true