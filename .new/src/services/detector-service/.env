# ============================================================================
# detector service Service - Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Environment variables for the detector-service service that
#   processes video frames using yolo method for detector-service analysis in the Video RAG processing pipeline.
#
# ============================================================================

# Service Configuration
SERVICE_NAME=detector-service
DETECTOR_SERVICE_CONTAINER_NAME=detector-service
DETECTOR_SERVICE_HOST_PORT=8002
DETECTOR_SERVICE_INTERNAL_PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_INPUT_TOPIC=raw-frames
KAFKA_OUTPUT_TOPIC=detection-results
DETECTOR_SERVICE_CONSUMER_GROUP=detector-service-group

# Processing Configuration
DETECTOR_SERVICE_BATCH_SIZE=5
DETECTOR_SERVICE_TIMEOUT=30
DETECTOR_SERVICE_PROCESSING_METHOD=yolo

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8080

