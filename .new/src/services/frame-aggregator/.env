# ============================================================================
# frame aggregator Service - Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Environment variables for the frame-aggregator service that
#   processes video frames using vector-store method for frame-aggregator analysis in the Video RAG processing pipeline.
#
# ============================================================================

# Service Configuration
SERVICE_NAME=frame-aggregator
FRAME_AGGREGATOR_CONTAINER_NAME=frame-aggregator
FRAME_AGGREGATOR_HOST_PORT=8004
FRAME_AGGREGATOR_INTERNAL_PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_INPUT_TOPIC=caption-results
KAFKA_OUTPUT_TOPIC=aggregated-results
FRAME_AGGREGATOR_CONSUMER_GROUP=frame-aggregator-group

# Processing Configuration
FRAME_AGGREGATOR_BATCH_SIZE=5
FRAME_AGGREGATOR_TIMEOUT=30
FRAME_AGGREGATOR_PROCESSING_METHOD=vector-store

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8080

