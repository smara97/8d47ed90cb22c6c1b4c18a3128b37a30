# Service Configuration
SERVICE_NAME=test-service
TEST_SERVICE_CONTAINER_NAME=test-service
TEST_SERVICE_HOST_PORT=8005
TEST_SERVICE_INTERNAL_PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_INPUT_TOPIC=raw-frames
KAFKA_OUTPUT_TOPIC=test-service-results
TEST_SERVICE_CONSUMER_GROUP=test-service-group

# Processing Configuration
TEST_SERVICE_BATCH_SIZE=5
TEST_SERVICE_TIMEOUT=30
TEST_SERVICE_PROCESSING_METHOD=test

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8080

