# ============================================================================
# captioner service Service - Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Environment variables for the captioner-service service that
#   processes video frames using blip method for captioner-service analysis in the Video RAG processing pipeline.
#
# ============================================================================

# Service Configuration
SERVICE_NAME=captioner-service
CAPTIONER_SERVICE_CONTAINER_NAME=captioner-service
CAPTIONER_SERVICE_HOST_PORT=8003
CAPTIONER_SERVICE_INTERNAL_PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_INPUT_TOPIC=raw-frames
KAFKA_OUTPUT_TOPIC=caption-results
CAPTIONER_SERVICE_CONSUMER_GROUP=captioner-service-group

# Processing Configuration
CAPTIONER_SERVICE_BATCH_SIZE=5
CAPTIONER_SERVICE_TIMEOUT=30
CAPTIONER_SERVICE_PROCESSING_METHOD=blip

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8080

