# ============================================================================
# ocr service Service - Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Environment variables for the ocr-service service that
#   processes video frames using tesseract method for ocr-service analysis in the Video RAG processing pipeline.
#
# ============================================================================

# Service Configuration
SERVICE_NAME=ocr-service
OCR_SERVICE_CONTAINER_NAME=ocr-service
OCR_SERVICE_HOST_PORT=8001
OCR_SERVICE_INTERNAL_PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_INPUT_TOPIC=raw-frames
KAFKA_OUTPUT_TOPIC=ocr-results
OCR_SERVICE_CONSUMER_GROUP=ocr-service-group

# Processing Configuration
OCR_SERVICE_BATCH_SIZE=5
OCR_SERVICE_TIMEOUT=30
OCR_SERVICE_PROCESSING_METHOD=tesseract

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8080

