# ============================================================================
# Staging Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Staging environment variables that mirror production settings for
#   deployment validation and performance testing.
#
# ============================================================================

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=10000
KAFKA_MAX_POLL_RECORDS=500

# Service Configuration
OCR_BATCH_SIZE=8
OCR_TIMEOUT=25
DETECTION_CONFIDENCE_THRESHOLD=0.6
MODEL_SIZE=medium
MAX_CAPTION_LENGTH=75
CAPTION_TIMEOUT=45

# Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_SECURE=false

# Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=video_embeddings_staging

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=15
PROMETHEUS_ENDPOINT=prometheus:9090

# Performance Settings
WORKER_PROCESSES=2
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=60

# Security
ENABLE_AUTH=false
API_RATE_LIMIT=1000