# ============================================================================
# Frame Aggregator Service - Environment Configuration
# ============================================================================
#
# PURPOSE:
#   Environment variables for the frame aggregator service that combines
#   OCR, detection, and captioning results into unified frame metadata.
#
# ============================================================================

# Service Configuration
FRAME_AGGREGATOR_CONTAINER_NAME=frame-aggregator
FRAME_AGGREGATOR_HOST_PORT=8004
FRAME_AGGREGATOR_INTERNAL_PORT=8000
FRAME_AGGREGATOR_SERVICE_NAME=frame-aggregator

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_INPUT_TOPICS=ocr-results,detection-results,caption-results
KAFKA_OUTPUT_TOPIC=aggregated-frame-metadata
FRAME_AGGREGATOR_CONSUMER_GROUP=frame-aggregator-group

# Processing Configuration
AGGREGATION_TIMEOUT_SECONDS=300
MAX_CORRELATION_CACHE_SIZE=10000

# Logging
LOG_LEVEL=INFO